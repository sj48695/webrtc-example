{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "**/*.pem",
        "outDir": "dist"
      },
      {
        "include": "**/*.sdp",
        "outDir": "dist"
      }
    ],
    "watchAssets": true
  }
}